<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <com.example.zassmin.fragmentexercise.utils.RoundedImageView
        android:id="@+id/ivPhoto"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_marginBottom="@dimen/icon_padding"
        android:layout_above="@+id/tvFullName"
        android:background="@drawable/default_user_icon" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/icon_padding"
        android:layout_above="@+id/tvJobTitle"
        android:textStyle="bold"
        android:text="Adele" />

    <TextView
        android:id="@+id/tvJobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/icon_padding"
        android:layout_alignParentBottom="true"
        android:text="Singer and Songwriter" />

</RelativeLayout>